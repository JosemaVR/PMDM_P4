<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaVinciApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anillo</item>
        <item name="colorPrimaryVariant">@color/anilloClaro</item>
        <item name="colorOnPrimary">@color/anilloClaro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/anillo</item>
        <item name="colorSecondaryVariant">@color/anilloClaro</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.DaVinciApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DaVinciApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DaVinciApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>